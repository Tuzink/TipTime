<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
               Text="Valor"/>
            <Entry
               x:Name="ValorTotalEntry"
               Placeholder="Digite o valor total"/>

            <Label
             Text="Gorjeta"/>
            <Label
             x:Name="ValorGorgetalEntry"/>

            <Label
                x:Name="ValorGorjeta"/>

            <Label
             Text="Total"/>
            <Label
                x:Name="TotalFinal"
                Text="0.00"/>

            <Label
             Text="Porcentagem Gorjeta"/>
            <Label
                x:Name="PorcentagemLabel"
                Text="15%"/>

            <Slider 
                Maximum="100"
                Minimum="0"    
                x:Name="PorcentagemSlider"
                ValueChanged="PorcentagemSlider_ValueChanged"/>

            <Button
                x:Name="Porcentagem15"
                Text="15%"
                Clicked="Porcentagem15Btn_Clicked"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="Porcentagem20"
                Text="20%" 
                Clicked="Porcentagem20Btn_Clicked"
                HorizontalOptions="Fill"/>
            
            <Button
                x:Name="RoundD"
                Text="Arredondar para baixo"
                Clicked="RoundD_Clicked"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RoundU"
                Text="Arredondar para cima" 
                Clicked="RoundU_Clicked"
                HorizontalOptions="Fill"/>
                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
